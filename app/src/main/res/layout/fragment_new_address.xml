<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TreeEditor.NewAddressFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_house_number_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_house_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_street_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Street">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_city_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_state_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_country_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Country">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_zipcode_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zipcode">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/new_address_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Address"
            android:layout_gravity="center"
            />
    </LinearLayout>

</FrameLayout>