<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FamilyMemberDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_first_name_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_last_name_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_house_number_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="House Number"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_house_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_street_name_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Street Name"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_street_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_town_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Town or City"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_town"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_state_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_country_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Country"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_zipcode_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zipcode"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_gender_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gender">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_birth_date_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Birth date"
            app:placeholderText="mm/dd/yyyy">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_birth_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/family_member_detail_descendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical History"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/medical_history_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" >


        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</FrameLayout>