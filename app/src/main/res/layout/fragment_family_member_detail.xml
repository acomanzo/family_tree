<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FamilyMemberDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_first_name_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_last_name_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_house_number_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="House Number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_house_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_street_name_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Street Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_street_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_town_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Town or City">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_town"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_state_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_zipcode_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zipcode">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/family_member_detail_gender_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gender">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family_member_detail_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/family_member_detail_descendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/family_member_detail_add_descendant_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Descendant"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/family_member_detail_update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/family_member_detail_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Delete" />

    </LinearLayout>
</FrameLayout>